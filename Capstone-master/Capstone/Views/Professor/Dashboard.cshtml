@{
    string routePrefix = Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") != "Development" ? "/cis4396-f05" : "";
}


<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professor Home Page</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/professorhome.css")">
</head>
<body>
    <div class="wrapper">
        <header class="headerbg">
            <img src="~/images/TempleLogo.svg" alt="Company Logo" class="logo" />
        </header>

        <section class="middle-container">
            <button class="hamburger" onclick="toggleNav()">&#9776;</button>

            <nav class="sidenav">
                <a asp-controller="Professor" asp-action="ProfessorHome">Home</a>
                <a asp-controller="Professor" asp-action="UserManagement">User Management</a>
                <a asp-controller="Professor" asp-action="ViewReports">Scrum View</a>
                <a asp-controller="Professor" asp-action="ScrumManagement">Scrum Management</a>
                <a asp-controller="Professor" asp-action="TeamManagement">Team Management</a>
                <a asp-controller="Login" asp-action="Login">Logout</a>
            </nav>

            <div class="content-container">
                <h1>Welcome Back @ViewBag.full_name, @ViewBag.TU_ID, @ViewBag.User_Type!</h1>
                <h2>SCRUM Reporting</h2>
                <h3>Streamlining SCRUM reporting for Temple University students and professors.</h3>
            </div>
        </section>

        <footer class="footer">
            <div class="container">
                &copy; 2024 Temple SCRUM. All rights reserved.
            </div>
        </footer>
    </div>

    <script>
        function toggleNav() {
            var sidenav = document.querySelector(".sidenav");
            sidenav.classList.toggle("open");
        }
    </script>
</body>

</html>



