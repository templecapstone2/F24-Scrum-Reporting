<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/professorStyling.css">

    <title>View Reports Page</title>

</head>
<body>

    <div class="content-title">
        <h1>View Reports Page</h1>
    </div>

    <div class="content-container">
        <nav class="sidenav">
            <a asp-controller="Professor" asp-action="Dashboard">Dashboard</a>
            <a asp-controller="Professor" asp-action="StudentManagement">Student Management</a>
            <a asp-controller="Professor" asp-action="AggregateView">Aggregate View</a>
            <a asp-controller="Professor" asp-action="ScrumManagement">Scrum Management</a>
            <a asp-controller="Professor" asp-action="TeamManagement">Team Management</a>
            <a asp-controller="Login" asp-action="Login">Logout</a>
        </nav>

        <div class="reports-container">
            <div class="team-filter">
                <label for="teamFilter">Teams:</label>
                <select id="teamFilter" class="form-control" onchange="filterUsersByTeam()">
                    <option value="all">All</option>
                    <option value="scrum">Scrum Reporting</option>
                    <!-- Add other team options dynamically here -->
                </select>
            </div>
            <div class="team-filter">
                <label for="teamFilter">Students:</label>
                <select id="teamFilter" class="form-control" onchange="filterUsersByTeam()">
                    <option value="all">All</option>
                    <option value="scrum">John Doe </option>
                    <option value="unassigned">Steve Jobs</option>
                    <!-- Add other team options dynamically here -->
                </select>
            </div>
            <div class="team-filter">
                <label for="teamFilter">From:</label>
                <select id="teamFilter" class="form-control" onchange="filterUsersByTeam()">
                    <option value="all">Select</option>
                    <option value="scrum">10/11/24</option>
                    <option value="unassigned">10/12/24</option>
                    <!-- Add other team options dynamically here -->
                </select>
            </div>
            <div class="team-filter">
                <label for="teamFilter">To:</label>
                <select id="teamFilter" class="form-control" onchange="filterUsersByTeam()">
                    <option value="all">Select</option>
                    <option value="scrum">10/11/24</option>
                    <option value="unassigned">10/12/24</option>
                    <!-- Add other team options dynamically here -->
                </select>
            </div>
        </div>

        <div class="report-cards">
            @foreach (var report in Model) // Assuming Reports is a list in the model
            {
                <div class="report-card">
                    <div class="report-header">
                        <div class="report-name">@report.</div>
                        <div class="report-team">@report.</div>
                        <div class="report-date">Submitted: @report.DateSubmitted.ToShortDateString()</div>
                    </div>
                    <div class="report-body">
                        <div class="report-question">
                            <label>Question 1:</label>
                            <div>@report.QuestionOne</div>
                        </div>
                        <div class="report-question">
                            <label>Question 2:</label>
                            <div>@report.QuestionTwo</div>
                        </div>
                        <div class="report-question">
                            <label>Question 3:</label>
                            <div>@report.QuestionThree</div>
                        </div>
                    </div>
                </div>
            }
        </div>



    </div>

</body>








































