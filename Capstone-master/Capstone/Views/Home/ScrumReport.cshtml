@page
@model Capstone.Models.ScrumReport

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/scrumreport.css"> <!-- Link to your CSS file -->
    <title>Temple Scrum</title>
</head>
<body>
    <div class="container">
        <h1>Temple Scrum</h1>
        <h2>Scrum Report Page</h2>
        <table>
            <thead>
                <tr>
                    <th>Scrum</th>
                    <th>Due Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ScrumItems)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.DueDate.ToString("M/d/yyyy")</td>
                        <td>
                            @if (item.IsSubmitted)
                            {
                                <span>Submitted</span>
                            }
                            else
                            {
                        <a href="#">Edit</a>
                                    | < a href = "#" > Submit </ a >
                                    }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
