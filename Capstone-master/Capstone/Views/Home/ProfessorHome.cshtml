@{
}


<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professor Home Page</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/professorhome.css")">
</head>
<body>

    <header class="headerbg">
        <img src="~/images/TempleLogo.svg" alt="Company Logo" class="logo" />
    </header>

    <section class="middle-container">

        <button class="hamburger" onclick="toggleNav()">&#9776;</button>

        <nav class="sidenav">
            <a asp-controller="Home" asp-action="ProfessorHome">Home</a> @* Professor Home *@
            <a asp-controller="Home" asp-action="Users">User Management</a> @* User Management *@
            <a asp-controller="Home" asp-action="ViewReports">Scrum View</a> @* Professor Aggregate Views *@
            <a asp-controller="Home" asp-action="ScrumView">Scrum Management</a> @* Scrum Management *@
            <a asp-controller="Home" asp-action="TeamManagement">Team Management</a> @* Team Management *@
            <a asp-controller="Home" asp-action="Logout">Logout</a> @* Logout *@
        </nav>



        <div class="content-container">
            <h1>Welcome Back Professor Brigilia!</h1>
            <h2>SCRUM Reporting</h2>
            <h3>
                Streamlining SCRUM reporting
                for Temple University students and professors.
            </h3>
        </div>
    </section>

    <footer class="footer">
        <div class="container">
            &copy; 2024 Temple SCRUM. All rights reserved.
        </div>
    </footer>

    <script>
        function toggleNav() {
            var sidenav = document.querySelector(".sidenav");
            sidenav.classList.toggle("open");
        }
    </script>

</body>
</html>



